FROM python:3.10-slim

WORKDIR /app

# Copy requirements first for better caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY src/ src/

# Create directories
RUN mkdir -p metrics

# Set environment variables
ENV PYTHONPATH=/app
ENV PORT=8001

# Expose port
EXPOSE 8001

# Run monitoring service
CMD ["uvicorn", "src.monitoring.app:app", "--host", "0.0.0.0", "--port", "8001"]
